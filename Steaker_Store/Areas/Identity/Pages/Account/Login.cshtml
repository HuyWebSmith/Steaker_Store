@page
@model LoginModel

@{
    ViewData["Title"] = "";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<h1>@ViewData["Title"]</h1>
<body style="background-image: url(https://cdn5.f-cdn.com/contestentries/1578585/21468461/5d62b49ac544b_thumb900.jpg); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <div class="container d-flex justify-content-center">
        <div class="bg-opacity-25 bg-body-tertiary border border-dark-subtle border-2 rounded-1 border-end-0  p-5  mt-5 me-0 d-none d-sm-block" style="width: 500px; height: 600px;">
            <h1 class="text-center mb-5">Sign In</h1>
            <div class="d-grid col-12 mx-auto">
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <button type="submit" class="btn btn-danger d-flex  justify-content-around" style="width:100%">
                        <i class="fa-brands fa-google me-2 mt-1" style="color: #ffffff;"></i>
                        <div class="bg-white" style="width:2px;"></div>
                        SIGN UP WITH GOOGLE
                    </button>
                </form>

                <form asp-controller="Account" asp-route-provider="Facebook" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Facebook" />
                    <button type="submit" class="btn btn-primary mt-5  d-flex  justify-content-around" style="width:100%">
                        <i class="fa-brands fa-facebook-f me-2 mt-1" style="color: #ffffff;"></i>
                        <div class="bg-white ms-3" style="width:2px;"></div>
                        SIGN UP WITH FACEBOOK
                    </button>
                </form>
            </div>
        </div>
        <div class="bg-opacity-50 bg-body-tertiary border border-dark-subtle border-2 rounded-1 border-end-0  p-5  mt-5  d-none d-sm-block" style="width: 500px; height: 600px;">
            <section>
                <div class="text-center"><img src="https://cdn-icons-png.flaticon.com/512/123/123281.png" alt="" style="width: 100px;height: 100px;"></div>

                <form id="account" method="post" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-dark  text-decoration-none">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark text-decoration-none">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-dark text-decoration-none">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
