<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Sidebar Offcanvas -->
    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="sidebarMenu">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Admin Panel</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/HomeAdmin/Index"><i class="fa-solid fa-house-user me-1" style="color: #ffffff;"></i> Dashboard</a>
                </li>
                 
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Categories/Index"><i class="fa-solid fa-layer-group me-1" style="color: #ffffff;"></i> Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/MenuItem/Index"><i class="fa-solid fa-utensils me-1" style="color: #ffffff;"></i> Menu Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/HomeAdmin/ManageRoles"><i class="fa-solid fa-people-roof me-1" style="color: #ffffff;"></i> Manage Roles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AdminOrder/Index"><i class="fa-solid fa-people-roof me-1" style="color: #ffffff;"></i> Đơn Hàng</a>
                </li>

            </ul>
        </div>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <button class="btn btn-outline-light" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">☰ Menu</button>
        <a class="nav-link text-white me-3" href="/Identity/Account/Logout">🚪 Logout</a>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
