@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var user in Model)
        {
            <tr>
                <td class="align-middle">@(user?.FullName ?? "Unknown")</td>
                <td class="align-middle">@user.Email</td>
                <td class="align-middle">
                    @(string.IsNullOrEmpty(user.Roles) ? "<span class='text-danger'>Chưa có role</span>" : user.Roles)
                </td>
                <td class="align-middle">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditRole", new { userId = user.UserId })">
                        ✏️ Chỉnh sửa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
