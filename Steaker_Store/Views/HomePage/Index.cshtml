<style>
    
    /* Banner */

    .banner {
        position: relative;
        width: 100%;
        height: 600px;
        background-image: url(https://previews.123rf.com/images/vaaseenaa/vaaseenaa2007/vaaseenaa200700013/150851572-meat-banner-raw-beef-steak-and-grilled-beef-steak-dark-background-copy-space-for-text.jpg);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
        overflow: hidden;
    }

        .banner::before {
            content: "";
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5); /* Lớp mờ */
            box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.8); /* Bóng tối từ trong */
            z-index: 1;
        }

        .banner > * {
            position: relative;
            z-index: 2;
            color: white;
        }


    .banner__tiltle {
        align-items: center;
        display: flex;
        flex-direction: column;
    }

        .banner__tiltle h1 {
            font-size: 90px;
            width: 667px;
            height: 252px;
            font-weight: 350;
            text-align: center;
            font-family: "Playfair Display", serif;
        }

        .banner__tiltle h2 {
            font-size: 20px;
            width: 517px;
            height: 64px;
            font-weight: 300;
            text-align: center;
        }

    .banner__button {
        display: flex;
        gap: 10px;
    }

        .banner__button a {
            text-decoration: none;
            color: var(--letter-color);
            font-size: 13px;
            font-weight: 600;
            width: 113px;
            height: 50px;
            border-radius: 30px;
            cursor: pointer;
            text-align: center;
            border: 2px solid var(--primary-color);
            padding-top: 13px;
        }

            .banner__button a:hover {
                background: #AD343E;
                color: white;
            }
    /* Menu */
    .menu {
        width: 100%;
        height: 656px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 50px;
        padding-top: 70px;
    }

        .menu h1 {
            font-size: 50px;
            font-weight: 400;
            font-family: "Playfair Display", serif;
        }

    .menu__card {
        width: 1300px;
        height: 500px;
        display: flex;
        gap: 20px;
    }

    .menu__card__container {
        width: 300px;
        height: 375px;
        border: 2px solid #E8EBE1;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        padding: 20px;
        border-radius: 10px;
    }

        .menu__card__container p {
            text-align: center;
        }

        .menu__card__container a {
            text-decoration: none;
            color: #AD343E;
            font-weight: 600;
        }

    .card__icon {
        border-radius: 50%;
        width: 80px;
        height: 80px;
        background: #F2F3F0;
        display: flex;
    }

        .card__icon img {
            border-radius: 50%;
            object-fit: cover;
            object-position: center;
            width: 50px;
            height: 50px;
            margin: auto;
        }

    /* provide */
    .provide {
        width: 100%;
        height: 700px;
