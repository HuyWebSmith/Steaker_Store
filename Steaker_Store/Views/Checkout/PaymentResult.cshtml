@model Steaker_Store.Models.Vnpay.PaymentResponseModel

@{
    ViewData["Title"] = "Kết quả thanh toán";
    var isSuccess = Model.Success;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 600px;">
        <div class="text-center">
            @if (isSuccess)
            {
                <div class="text-success">
                    <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Thanh toán thành công!</h2>
                </div>
            }
            else
            {
                <div class="text-danger">
                    <i class="bi bi-x-circle-fill" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Thanh toán thất bại!</h2>
                </div>
            }

            <hr class="my-4" />

            <div class="text-start">
                <p><i class="bi bi-receipt"></i> <strong>Mô tả đơn hàng:</strong> @Model.OrderDescription</p>
                <p><i class="bi bi-hash"></i> <strong>Mã giao dịch:</strong> @Model.TransactionId</p>
                <p><i class="bi bi-bag-check"></i> <strong>Mã đơn hàng:</strong> @Model.OrderId</p>
                <p><i class="bi bi-credit-card-2-front"></i> <strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
                <p><i class="bi bi-check2-square"></i> <strong>ID thanh toán:</strong> @Model.PaymentId</p>
                <p><i class="bi bi-shield-check"></i> <strong>Mã phản hồi VNPAY:</strong> @Model.VnPayResponseCode</p>
            </div>

            <a href="/" class="btn btn-outline-primary mt-4">
                <i class="bi bi-house-door-fill"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>
